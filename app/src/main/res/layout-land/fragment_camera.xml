<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="45dp">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent">
        <FrameLayout
                android:id="@+id/galleryFragmentContainer"
                android:layout_marginStart="0dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/newPictureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_add_white_24dp"
                android:layout_margin="16dp" app:backgroundTint="#F44336"/>
    </RelativeLayout>
</LinearLayout>
