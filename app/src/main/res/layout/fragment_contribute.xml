<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".fragments.ContributeFragment"
            android:padding="18dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contribute_header"
                android:textSize="40sp"
                android:layout_marginBottom="25dp">
        </TextView>
        <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contribute_input_title_label"
                android:textSize="18sp">
        </TextView>
        <EditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage"
                android:text=""
                android:layout_marginBottom="10dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contribute_input_longitude_label"
                android:textSize="18sp">
        </TextView>
        <EditText
                android:id="@+id/longitudeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contribute_input_latitude_label"
                android:textSize="18sp">
        </TextView>
        <EditText
                android:id="@+id/latitudeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="latitude"
                android:inputType="textShortMessage"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contribute_input_description_label"
                android:textSize="18sp">
        </TextView>
        <EditText
                android:id="@+id/descriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="6"
                android:inputType="textMultiLine"/>
        <Button
                android:id="@+id/choosePicturesButton"
                android:text="@string/contribute_choose_picture_button_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_marginTop="15dp"
                android:padding="20dp"/>
        <Button
                android:id="@+id/submitPlaceButton"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="58sp"
                android:text="@string/contribute_post_button_text"
        />
    </LinearLayout>
</ScrollView>